// ARROW

.arrow-icon
  background-color transparent
  height 2.8rem
  width 2.8rem
  display block
  padding 0.4em
  margin 1rem auto 0
  //margin 3em auto 0 -2rem
  position relative
  cursor pointer
  border-radius 4px
  .left-bar
    position absolute
    background-color transparent
    top 0
    left 0
    width 40px
    height 10px
    display block
    transform rotate(35deg)
    float right
    border-radius 2px
    &:after
      content ""
      background-color primary
      width 40px
      height 0.6rem
      display block
      float right
      border-radius 8px
      // border-radius 6px 10px 10px 6px
      // transition all $duration $easing
      z-index -1
      +tablet(orientation: landscape)
        height 0.5rem
  .right-bar
    position absolute
    background-color transparent
    top 0
    left 26px
    width 40px
    height 10px
    display block
    transform rotate(-35deg)
    float right
    border-radius 2px
    &:after
      content ""
      background-color primary
      width 40px
      height 0.6rem
      display block
      float right
      border-radius 8px
      // border-radius 10px 6px 6px 10px
      // transition all $duration $easing;
      z-index -1
      +tablet(orientation: landscape)
        height 0.5rem

