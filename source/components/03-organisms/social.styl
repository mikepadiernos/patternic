// SOCIAL LINKS

ul
	padding 0
	list-style none
	&.menu-social
		&.social-icons
			display flex
			justify-content center
			align-items center
			a
				text-decoration none
				transition 0.6s
				display: flex;
				justify-content: center;
				align-items: center;
				&.fa
					font-size 1.35rem
					padding 0.5rem
					color body
					background-color primary
					border-radius 50%
					margin 0 4px
					width 32px
					height 32px
					&.fa-linkedin
						background-color #2977c9
					&.fa-github-alt
						background-color #000000
					&.fa-drupal
						background-color #064771
					&.fa-behance
						background-color #0057ff
					&.fa-dribbble
						background-color #fd5493
						color #c50e53
					&.fa-deviantart
						color #06f286
						background-color #000000
				&:hover
					&.fa
						background-color primary
						color #ffffff

