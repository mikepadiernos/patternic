// NAVIGATION

+between('xs', 's')
	header
		background-color body
		box-shadow 1px 1px 4px 0 rgba(0,0,0,.1)
		position fixed
		width 100%
		z-index 5
		.region-navigation
			margin 0
			padding 0
			list-style none
			overflow hidden
			background-color #fff
			clear both
			max-height 0
			transition max-height .2s ease-out
			nav
				ul
					padding 0
					margin-bottom 0
					li
						&.nav-item
							padding 0
							&.is-active-trail
								a
									color primary
							a
								font-family font-default-serif, font-family-serif
								text-decoration none
								padding 15px
								text-align left
								color text
								display block
								font-size 1.2rem
								font-weight bold
								&:hover
									color text
								&:active,
								&.is-active
									color primary
		.menu-icon
			padding 35px 28px
			position relative
			float right
			cursor pointer
		.nav-icon
			background-color primary-dark
			border-radius 2px
			display block
			height 4px
			width 20px
			position relative
			transition background .2s ease-out
			&:before
				content ''
				background-color primary-dark
				border-radius 2px
				display block
				height 100%
				width 65%
				position absolute
				transition all .2s ease-out
				top 7px
			&:after
				content ''
				background-color primary-dark
				border-radius 2px
				display block
				height 100%
				width 100%
				position absolute
				transition all .2s ease-out
				top -7px
		.menu-button
			display none
			&:checked
				~ .region-navigation
					max-height 340px
					width 100%
				~ .menu-icon
					.nav-icon
						background transparent
						&:before
							transform rotate(-45deg)
							top 0
							width 100%
						&:after
							transform rotate(45deg)
							top 0
