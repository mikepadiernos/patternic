+above('m')
	.menu-button,
	.menu-icon
		display none
	nav
		ul
			padding 0
			li
				&.nav-item
					padding 0
					a
						font-family font-default-serif, font-family-serif
						text-decoration none
						padding 12px 12px 12px 25px
						color text
						display block
						font-size 1.2rem
						line-height 1.2
						position relative
						&:before
							content ''
							height 100%
							top 0
							left 0
							width 5px
							background-color transparent
							position absolute
							display block
							transition all 0.6s ease
						&:hover
							&:before
								background-color text
						&:active,
						&.is-active
							color primary
							transition 0
							&:before
								background-color primary
					&.is-active-trail
						a
							color primary
							transition 0
							&:before
								background-color primary