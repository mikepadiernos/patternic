// FORMS

.form-item
	input,
	select,
	textarea
		background-color text-lighter
		border-top 0
		border-right 0
		border-left 0
		border-bottom 1px solid text-light
		color text-light
		box-sizing border-box
		//padding-top 10px
		margin-bottom 0
		width 100%
	input,
	select
		height 44px
		&.form-checkbox
			width auto
			height auto

.form-actions
	display flex
	align-items center
	input
		margin-bottom 0


details,
fieldset
	&.form-wrapper
		 border 1px solid #ccc
		border-radius 2px
		padding 10px 12px
		margin-bottom 1rem
		position relative
		> summary,
		> legend
			background #efefef
			&.details_summary
				margin -10px -12px 10px
				padding 10px 12px
		> legend
			position absolute
			top 0
			left 0
			right 0
			display block
			padding 10px
			//letter-spacing 0.08em
			//text-transform uppercase;
			//font-size: 1em
			//font-weight: bold;
	> summary
		&::-webkit-details-marker
			display none
	a
		&.button
			//padding 10px 30px
